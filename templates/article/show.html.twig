{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <a href="{{ path("app_article") }}" class="btn btn-primary mt-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h3 class="mt-4">Article :</h3>

                <div class="card mb-4">
                    {% if article.images is not empty %}
                        <div class="card-header">
                            <div class="row">
                                {% for image in article.images %}
                                    <div class="col-4">
                                        <img class="img-fluid rounded-3" style="height: 150px; object-fit: cover;" src="{{ vich_uploader_asset(image)|imagine_filter('vignette_article') }}" alt="">
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}


                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <h5>{{ article.titre }}</h5>
                            <div class="text-muted">Cat√©gorie : {{ article.category.name }}</div>
                        </div>
                        <p class="card-text">{{ article.content }}</p>
                        <div class="d-flex justify-content-end">
                            {% include 'like/button.html.twig' with { routeName:"app_like", object:article } %}
                        </div>

                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted mt-3 d-flex flex-column">
                            <div class="mb-2">

                                Auteur : <img class="img-fluid mx-1  rounded-3" style="max-width: 150px; max-height: 150px;" src="{{ vich_uploader_asset(app.user.image)|imagine_filter('petite_vignette') }}" alt="">
                                {{ article.author.username }}
                            </div>
                            <div>Ecrit le {{ article.createdAt|date("d/m/Y H:i") }}</div>
                        </small>
                        <div>

                            {% if app.user == article.author %}
                                <a href="{{ path("app_edit_article", {id: article.id}) }}" class="btn btn-warning mt-3">Editer</a>
                                <a href="{{ path("app_delete_article", {id: article.id}) }}" class="btn btn-danger mt-3">Supprimer</a>
                                <a href="{{ path('article_image', {id:article.id}) }}" class="btn btn-success">Images</a>

                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h3 class="mt-4">Commentaires :</h3>

                {% for comment in article.comments %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text">{{ comment.content }}</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <div class="text-muted">{{ comment.createdAt|date("d/m/Y H:i") }}</div>
                            {% if app.user == comment.author %}
                            <div>
                                {% include 'like/button.html.twig' with { routeName:"comment_like", object:comment } %}
                                <a href="{{ path("edit_comment",{id:comment.id}) }}" class="btn btn-warning">Editer</a>
                                <a href="{{ path("delete_comment",{id:comment.id}) }}" class="btn btn-danger">Supprimer</a>
                                <a href="{{ path("add_comment_image", {id: comment.id}) }}" class="btn btn-primary">Image</a>

                            </div>
                            {% else %}
                            <div>
                                <div class="text-muted">{{ comment.author.username }}</div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}


                {% if app.user %}
                {{ form_start(form, {attr: {action:path("app_comment_create", {id:article.id})}}) }}

                <div class="d-flex">
                    {{ form_widget(form.content, {'attr': {'class': 'form-control flex-grow-1 ', 'rows': 3, 'placeholder': 'Ajouter un commentaire...' }}) }}
                    <button type="submit" class="btn btn-success ml-2">Commenter</button>
                </div>

                {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>

    {% if app.user %}
        <script src="{{ asset('like.js') }}"></script>
    {% endif %}
{% endblock %}