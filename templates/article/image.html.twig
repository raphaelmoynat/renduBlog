{% extends 'base.html.twig' %}

{% form_theme formImage 'bootstrap_5_layout.html.twig' %}
{% block body %}

    <h3>Page des images de l'article "{{ article.titre }}"</h3>
    {% include 'image/image_or_not_image.html.twig' with {object:article} %}
    <h3>Ajouter une image</h3>

    {{ form_start(formImage, {attr:{action:path('add_article_image', {id:article.id})}}) }}
    {{ form_row(formImage.imageFile) }}
    <button type="submit" class="btn btn-success">Ajouter</button>
    {{ form_end(formImage) }}
    <a href="{{ path('app_show',{id: article.id}) }}" class="btn btn-secondary mt-3">Retour</a>




{% endblock %}

