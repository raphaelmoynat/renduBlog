{% extends 'base.html.twig' %}

{% block body %}
    <div class="my-4"><h1>Tous les articles</h1></div>
        <div class="row">
            {% for article in articles %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if article.images is not empty %}
                            <div class="card-header">
                                <div class="row">
                                    {% for image in article.images %}
                                        <div class="col-6">
                                            <img class="img-fluid rounded-3" style="height: 150px; object-fit: cover;" src="{{ vich_uploader_asset(image)|imagine_filter('vignette_article') }}" alt="">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}                        <div class="card-body">
                            <div class="card-title d-flex justify-content-between">
                                <h5>{{ article.titre }}</h5>
                                <div class="text-muted">Cat√©gorie : {{ article.category.name }}</div>
                            </div>
                            <p class="card-text">{{ article.content }}</p>
                            <div class="d-flex justify-content-end">
                                {% include 'like/button.html.twig' with { routeName:"app_like", object:article } %}
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <small class="text-muted mt-3 d-flex flex-column">

                                {% if app.user and app.user.image is not empty %}

                                <div class="mb-2">

                                    {{ article.author.username }}
                                </div>
                                {% endif %}
                                <div>Ecrit le {{ article.createdAt|date("d/m/Y H:i") }}</div>
                            </small>
                            <div class="d-flex justify-content-center align-items-center">
                            <a href="{{ path("app_show", {id: article.id}) }}" class="btn btn-primary mt-3">Voir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if app.user %}
            <script src="{{ asset('like.js') }}"></script>
        {% endif %}
{% endblock %}
